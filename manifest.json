{
  "manifest_version": 3,
  "name": "AI-Shield",
  "version": "1.0.0",
  "description": "Data protection for AI platforms - GDPR, EU AI Act, CCPA compliance",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://console.anthropic.com/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://perplexity.ai/*",
    "https://chat.mistral.ai/*",
    "https://llama.meta.com/*",
    "https://huggingface.co/chat/*",
    "https://console.groq.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI-Shield - Data Protection"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://console.anthropic.com/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://perplexity.ai/*",
        "https://chat.mistral.ai/*",
        "https://llama.meta.com/*",
        "https://huggingface.co/chat/*",
        "https://console.groq.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
