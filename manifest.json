{
  "manifest_version": 3,
  "name": "AI Shield - Compliance Auditor",
  "version": "3.0.0",
  "description": "Real-time data protection for AI platforms - GDPR, EU AI Act, CCPA compliant. Protects 25+ sensitive data types.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://www.perplexity.ai/*",
    "https://chat.mistral.ai/*",
    "https://huggingface.co/*",
    "https://groq.com/*",
    "https://www.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Shield - Data Protection"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.perplexity.ai/*",
        "https://chat.mistral.ai/*",
        "https://huggingface.co/*",
        "https://groq.com/*",
        "https://www.anthropic.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
  "16": "icons/icon.png",
  "48": "icons/icon.png",
  "128": "icons/icon.png"
 }
}
